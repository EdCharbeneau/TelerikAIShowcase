@layout TelerikLayout
@inherits LayoutComponentBase

<ChatMenu />

<div class="chat-output k-d-flex k-flex-col k-p-4 k-pt-10" style="height:calc(100vh - 146px); overflow: auto">
    <div class="k-flex-1">
        <div class="k-d-flex k-justify-content-center k-w-full">
            <div class="k-w-3/5">
                <SectionOutlet SectionId="Sections.ChatOutput" @rendermode="new InteractiveServerRenderMode(prerender:false)" />
                @Body
            </div>
        </div>
    </div>
</div>

<div>
    <TelerikAppBar Class="chat-prompt"
                   Position="AppBarPosition.Bottom"
                   PositionMode="AppBarPositionMode.Sticky">
        <AppBarSection Class="k-d-flex k-justify-content-center k-w-full k-pb-10">
            <SectionOutlet SectionId="Sections.ChatInput" @rendermode="new InteractiveServerRenderMode(prerender:false)" />
        </AppBarSection>
    </TelerikAppBar>
</div>

<SectionOutlet SectionId="Sections.OffScreen" @rendermode="new InteractiveServerRenderMode(prerender:false)" />

@code {

    /// <summary>
    /// Sections for the ThreeColumn layout.
    /// Uses MainLayout.
    /// </summary>
    internal static class Sections
    {
        /// <summary>
        /// A &lt;section&gt;&lt;/section&gt; element representing the layout's first column.
        /// </summary>
        internal static SectionOutlet? ChatOutput = new();
        /// <summary>
        /// A &lt;main&gt;&lt;/main&gt; element representing the layout's middle column.
        /// Default, uses the Body of the layout component.
        /// </summary>
        internal static SectionOutlet? ChatInput = new();
        /// <summary>
        /// An &lt;aside&gt;&lt;/aside&gt; element representing the layout's second column.
        /// </summary>
        internal static SectionOutlet? OffScreen = new();
    }
}
